{{#get "posts" limit="all" filter="primary_tag:[{{post.primary_tag.slug}}]+id:-{{post.id}}" as |related|}}
    {{#if related}}
        <section class="related-posts">
            <div class="container">
                {{#if @custom.related_posts_title}}
                    <h3 class="related-title">{{@custom.related_posts_title}}</h3>
                {{/if}}
                <div class="post-feed related">
                    {{#foreach posts}}
                        <div class="grid-item grid-sizer"></div>
                        {{> "loop"}}
                    {{/foreach}}
                </div>
            </div>
        </section>
    {{/if}}
{{/get}}