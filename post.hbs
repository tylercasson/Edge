{{!< default}}

<div class="content-area">
    <main class="site-main">
        <div class="post-pswp-content">
            {{#post}}
                <article class="{{post_class}} single">
                    <header class="post-header container large">
                        <h1 class="post-title">{{title}}</h1>
                    </header>
                    {{#if custom_excerpt}}
                        <div class="post-excerpt container medium">{{custom_excerpt}}</div>
                    {{/if}}
                    {{#if feature_image}}
                        <figure class="post-media container large">
                            <div class="post-media-wrapper">
                                <img class="post-image post-trigger" srcset="{{> srcset}}"
                                    sizes="(min-width: 1170px) 1140px, calc(100vw - 30px)"
                                    src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                                    href="{{img_url feature_image}}">
                                <a class="post-lightbox post-trigger" href="{{img_url feature_image}}">
                                    <i class="icon icon-arrow-expand"></i>
                                </a>
                            </div>
                            <figcaption class="post-caption">
                                <h2 class="post-caption-title">{{title}}</h2>
                                <div class="post-caption-meta">
                                    {{#primary_tag}}
                                    <span class="post-caption-meta-item post-caption-meta-tag">
                                        <a href="{{url}}">{{name}}</a>
                                    </span>
                                    {{/primary_tag}}
                                    <span class="post-caption-meta-item post-caption-meta-date">
                                        <time datetime="{{date format=" YYYY-MM-DD"}}">{{date published_at}}</time>
                                    </span>
                                    {{!-- <span class="post-caption-meta-item post-caption-meta-link">
                                        <a href="{{url}}">View project</a>
                                    </span> --}}
                                </div>
                            </figcaption>
                            {{#if feature_image_caption}}
                                <figcaption>{{feature_image_caption}}</figcaption>
                            {{/if}}
                        </figure>
                    {{/if}}
                    <div class="post-content gh-content kg-canvas">
                        {{content}}
                    </div>
                </article>
            {{/post}}
            {{#if @custom.show_related_posts}}
                {{> related}}
            {{/if}}
        </div>
    </main>
</div>